            <h2>@{{powner.name}}'s Packages</h2>
            <div class="pkg-grid">
                {{#each pkgs}}
                <div class="terminal-card">
                    <div>
                        <h3>
                            <a href="./{{powner.Name}}/{{this.name}}">{{this.name}}</a>
                            <span><i class="star icon"></i> {{this.StarCount}}</span>
